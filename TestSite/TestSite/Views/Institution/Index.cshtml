@model IEnumerable<TestSite.Models.Institution>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InstitutionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InstitutionPlace)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InstitutionAddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InstitutionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InstitutionPlace)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InstitutionAddress)
        </td>
