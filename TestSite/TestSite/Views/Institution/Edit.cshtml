@model TestSite.Models.Institution

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Institution</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.InstitutionID)

        <div class="form-group">
            @Html.LabelFor(model => model.InstitutionName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InstitutionName)
                @Html.ValidationMessageFor(model => model.InstitutionName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InstitutionPlace, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InstitutionPlace)
                @Html.ValidationMessageFor(model => model.InstitutionPlace)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InstitutionAddress, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InstitutionAddress)
                @Html.ValidationMessageFor(model => model.InstitutionAddress)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
