@model TestSite.Models.QuestionType

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактировать тип вопроса</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.QuestionTypeID)

        <div class="form-group">
            <label class="control-label col-md-2">Имя типа вопроса:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.QuestionTypeName)
                @Html.ValidationMessageFor(model => model.QuestionTypeName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Обратно к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
